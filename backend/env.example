# OpenAI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL_NAME=gpt-4o-mini

# 百度地图 API 配置
# 在 https://lbsyun.baidu.com/ 申请 AK
BAIDU_MAP_API_KEY=your_baidu_map_api_key_here

# 天气 API 配置 (可选，使用 OpenWeatherMap)
# 在 https://openweathermap.org/api 申请 API Key
WEATHER_API_KEY=your_weather_api_key_here

# Embedding Configuration (optional)
EMBEDDING_KEY=your_embedding_api_key_here
EMBEDDING_BASE_URL=https://api.openai.com/v1

# Proxy Configuration (optional)
USE_CN_MIRROR=false
PROXY_URL=http://your_proxy_url_here

# FastAPI Configuration
PORT=8000
HOST=localhost

# Session Configuration
MAX_SESSIONS=100
SESSION_TIMEOUT=3600  # 1 hour

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"] 